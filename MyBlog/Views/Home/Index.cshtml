@model Post[]

@{
    ViewData["Title"] = "Posts";
    var posts = Model;
}

@if (posts.Length == 0)
{
    <h5>Nothing to display...</h5>
}
else
{
    <div class="container mt-4">
        <table class="table table-striped fixed-width-table" style="margin-bottom: 100px;">
            <thead>
                <tr>                    
                    <th>Title</th>
                    <th style="padding-left: 50px;">Description</th>
                    <th>Image</th>
                    <th>Actions</th> 
                    <th></th> 
                </tr>
            </thead>
            <tbody>
                @foreach (var post in posts)
                {
                    @await Html.PartialAsync("_PostRow", post);
                }
            </tbody>
        </table>
    </div>
}

<a href="@Url.Action("Create", "Home")" class="btn btn-primary rounded-circle d-flex justify-content-center align-items-center" style="position: fixed; bottom: 5%; right: 5%; width: 60px; height: 60px; background-color: white; border: 1px solid #333;">
    <span style="color: black; font-size: 2.5em; position: absolute; bottom: 5%; right: 26%;"><i class="fa-light fa-plus"></i></span>
</a>

